# Пример файла с переменными окружения
# Скопируйте этот файл в .env и настройте значения

# Application Settings
APP_NAME="RentScout"
DEBUG=false
TESTING=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://rentscout:your_password@localhost:5432/rentscout
POSTGRES_USER=rentscout
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=rentscout

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false

# Cache Settings
CACHE_TTL=3600
CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# API Keys (если необходимо для парсеров)
AVITO_API_KEY=your_avito_key_here
CIAN_API_KEY=your_cian_key_here
YANDEX_TRAVEL_TOKEN=your_yandex_token

# Security
SECRET_KEY=your_very_long_random_secret_key_change_this
JWT_SECRET=another_secret_key_for_jwt

# CORS Settings (разделенные запятой)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Prometheus
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT=/metrics

# Elasticsearch (опционально)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=rentscout

# Sentry (опционально, для production)
SENTRY_DSN=

# External Services
PROXY_URL=
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Development Settings
HOT_RELOAD=true
AUTO_MIGRATE=false

# Logging
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Performance
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Feature Flags
ENABLE_AVITO_PARSER=true
ENABLE_CIAN_PARSER=true
ENABLE_ADVANCED_CACHE=true
ENABLE_CIRCUIT_BREAKER=true
